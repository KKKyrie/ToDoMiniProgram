.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
}

/*theme color begin*/
.yellow {
	color: #ffc44f;
}
.blue {
	color: #194f82;
}
.light-blue {
	color: #5cbaea;
}
.white {
	color: #ffffff;
}

.yellow-bg {
	background-color: #ffc44f;
}
.blue-bg {
	background-color: #194f82;
}
.light-blue-bg {
	background-color: #5cbaea;
}
/*theme color end*/

.test{
	border: 1rpx solid black;
}

.fixed-bottom{
	position: fixed;
	bottom: 30rpx;
}

.block-full-width{
	display: block;
	width: 100%;
}

.flex-container {
	display: flex;
	justify-content: center;
	align-items: center;
}


/*button begin*/
.full-button {
	width: 80%;
}

.light-blue-hover {
	background-color: #5cacea;
}
/*button end*/

/*layout begin*/
.mt20 {
	margin-top: 20rpx;
}
.mt10 {
	margin-top: 10rpx;
}
.mt200 {
	margin-top: 200rpx;
}
.ptb300{
	padding: 300rpx 0;
}
/*layout end*/